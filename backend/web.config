<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Prefer the standalone server when present, otherwise use the repo server.js -->
      <add name="iisnode-standalone" path=".next/standalone/server.js" verb="*" modules="iisnode" />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <!-- Force HTTPS -->
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- If .next/standalone/server.js exists, route requests there -->
        <rule name="UseStandalone" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <!-- Check for existence of the standalone server file -->
            <add input="{APPL_PHYSICAL_PATH}.next\\standalone\\server.js" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url=".next/standalone/server.js" />
        </rule>

        <!-- Fallback: send everything to server.js -->
        <rule name="NextJS" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode settings -->
    <iisnode
      node_env="production"
      nodeProcessCommandLine="node"
      debuggingEnabled="false"
      devErrorsEnabled="false"
    />
  </system.webServer>
</configuration>
