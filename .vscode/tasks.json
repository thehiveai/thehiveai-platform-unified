{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Vite (8080)",
      "type": "shell",
      "command": "npm run dev -- --port 8080 --host 0.0.0.0",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "VITE_API_BASE_URL": "http://localhost:3000"
        }
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Backend: Next (3000)",
      "type": "shell",
      "command": "npm run dev -- -p 3000",
      "options": {
        "cwd": "${workspaceFolder}\\backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Frontend + Backend",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Frontend: Vite (8080)",
        "Backend: Next (3000)"
      ],
      "group": "build"
    }
  ]
}
